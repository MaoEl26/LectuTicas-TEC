<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                tools:context=".Activities.LeyendasActivity"
                tools:showIn="@layout/activity_leyendas"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondo_principal"
            android:scaleType="centerCrop"
            />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margen_layout_seleccion_historia"
                android:layout_marginEnd="@dimen/margen_layout_seleccion_historia"
                android:layout_marginLeft="@dimen/margen_layout_seleccion_historia"
                android:layout_marginRight="@dimen/margen_layout_seleccion_historia"
                >

            <Button
                    android:id="@+id/btnCadejos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginRight="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginStart="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginEnd="@dimen/margen_botones_seleccion_historia"
                    android:background="@drawable/icono_lib_cadejos"
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="verLeyendaCadejos"/>

            <Button
                    android:id="@+id/btnCegua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/icono_lib_cegua"
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="verLeyendaCegua"/>

            <Button
                    android:id="@+id/btnCarreta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginLeft="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginRight="@dimen/margen_botones_seleccion_historia"
                    android:layout_marginStart="@dimen/margen_botones_seleccion_historia"
                    android:background="@drawable/icono_lib_carreta_sin_bueyes"
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="verLeyendaCarreta"/>

            <Button
                android:id="@+id/btnLlorona"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margen_botones_seleccion_historia"
                android:layout_marginLeft="@dimen/margen_botones_seleccion_historia"
                android:layout_marginRight="@dimen/margen_botones_seleccion_historia"
                android:layout_marginStart="@dimen/margen_botones_seleccion_historia"
                android:background="@drawable/icono_lib_llorona"
                android:onClick="verLeyendaLlorona" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>