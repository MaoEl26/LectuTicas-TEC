<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Activities.LecturaCuentoActivity"
                tools:showIn="@layout/activity_lectura_cuento"
                android:id="@id/layoutLecturaCuento"
                >

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/linearLayout2">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/scrollView2"
                android:layout_weight="1"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/EstiloTextoCuentos"
                    android:text="New Text"
                    android:id="@+id/textoParrafo"
                    android:gravity="center"/>
        </ScrollView>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                />

    </LinearLayout>


    <Button
            android:layout_width="@dimen/tamaño_botones"
            android:layout_height="@dimen/tamaño_botones"
            android:layout_marginLeft="@dimen/margen_botones_paginas_cuento"
            android:layout_marginStart="@dimen/margen_botones_paginas_cuento"
            android:layout_marginBottom="@dimen/margen_botones_paginas_cuento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            android:id="@+id/btnAtras"
            android:background="@drawable/boton_atras"
            style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margen_botones_paginas_cuento"
            >

        <Button
                android:id="@+id/botonMenu"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/tamaño_botones"
                android:layout_height="@dimen/tamaño_botones"
                android:layout_marginRight="@dimen/margen_botones_paginas_cuento"
                android:layout_marginEnd="@dimen/margen_botones_paginas_cuento"
                android:background="@drawable/boton_home"/>

        <Button
                android:id="@+id/btnPreguntas"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/tamaño_botones"
                android:layout_height="@dimen/tamaño_botones"
                android:layout_marginLeft="@dimen/margen_botones_paginas_cuento"
                android:layout_marginStart="@dimen/margen_botones_paginas_cuento"
                android:background="@drawable/boton_preguntas"/>
    </LinearLayout>

    <Button
            android:id="@+id/btnAdelante"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/tamaño_botones"
            android:layout_height="@dimen/tamaño_botones"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margen_botones_paginas_cuento"
            android:layout_marginEnd="@dimen/margen_botones_paginas_cuento"
            android:layout_marginBottom="@dimen/margen_botones_paginas_cuento"
            android:background="@drawable/boton_adelante"/>

</RelativeLayout>